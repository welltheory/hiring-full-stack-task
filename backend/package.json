{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for hiring assessment",
  "main": "dist/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "dotenv -e .env -- nodemon",
    "build": "rm -rf ./dist && NODE_OPTIONS='--max_old_space_size=8192' tsc -p tsconfig.build.json",
    "build:swc": "./build-swc.sh",
    "build:fast": "pnpm run build:swc && pnpm run typecheck",
    "typecheck": "NODE_OPTIONS='--max_old_space_size=8192' tsc --noEmit -p tsconfig.build.json",
    "test": "jest --config jest/config.ts",
    "test:watch": "jest --config jest/config.ts --watch",
    "db:setup": "dotenv -e .env -- sh -c 'prisma migrate dev && pnpm db:seed'",
    "db:migrate": "dotenv -e .env -- prisma migrate dev",
    "db:studio": "dotenv -e .env -- prisma studio",
    "db:generate": "dotenv -e .env -- prisma generate",
    "db:push": "dotenv -e .env -- prisma db push",
    "db:reset": "dotenv -e .env -- prisma migrate reset --force",
    "db:seed": "dotenv -e .env -- node -r @swc-node/register -r ./alias/index.ts prisma/seed.ts",
    "env:up": "docker compose -f dev/docker-compose.yml up -d",
    "env:down": "docker compose -f dev/docker-compose.yml down",
    "env:logs": "docker compose -f dev/docker-compose.yml logs -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@temporalio/activity": "^1.13.1",
    "@temporalio/client": "^1.13.1",
    "@temporalio/common": "^1.13.1",
    "@temporalio/worker": "^1.13.1",
    "@temporalio/workflow": "^1.13.1",
    "better-module-alias": "^1.0.7",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "method-override": "^3.0.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.9.3",
    "@swc/jest": "^0.2.37",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/method-override": "^3.0.0",
    "@types/node": "^20.17.6",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.7",
    "prisma": "^6.18.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
